@model StoreCategory
<form asp-action="EditStoreCategory" onsubmit="return submitStoreCategory(this)" autocomplete="off">
    <input type="hidden" asp-for="store_id" />
    <input type="hidden" asp-for="category_id" />
    <div class="form-group row">
        <label asp-for="matched_category_code" class="col-sm-2 col-form-label">Kategori Kodu</label>
        <div class="col-sm-3">
            <input type="text" asp-for="matched_category_code" class="form-control" style="border-radius: 5px;" required autofocus>
        </div>
        <span asp-validation-for="matched_category_code" class="text-danger"></span>
        <label asp-for="matched_category_name" class="col-sm-2 col-form-label">Kategori Adı</label>
        <div class="col-sm-9">
            <input type="text" asp-for="matched_category_name" class="form-control" style="border-radius: 5px;" required autofocus>
        </div>
        <span asp-validation-for="matched_category_name" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </div>
</form>