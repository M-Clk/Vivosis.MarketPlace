@model StoreUser
@if(!Model.is_confirmed)
{
    <span class="text-danger">Öncelikle bu mağazayı satın almanız gerekmektedir.</span>
}
else
{
<form asp-action="EditStore" onsubmit="return submitStore(this)" autocomplete="off">
    <input type="hidden" asp-for="store_id" />
    <input type="hidden" asp-for="user_id" />
    <div class="form-group row">
        <label asp-for="api_key" class="col-sm-2 col-form-label">Api Key</label>
        <div class="col-sm-10">
            <input type="text" asp-for="api_key" class="form-control" style="border-radius: 5px;" placeholder="Api key girin." required autofocus>
        </div>
        <span asp-validation-for="api_key" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="secret_key" class="col-sm-2 col-form-label">Secret Key</label>
        <div class="col-sm-10">
            <input type="text" asp-for="secret_key" class="form-control" style="border-radius: 5px;" placeholder="Secret key girin." required autofocus>
        </div>
        <span asp-validation-for="secret_key" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </div>
</form>
}